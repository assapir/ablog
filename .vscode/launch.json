{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Tests",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "build",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "--no-timeouts",
                "--colors",
                "--exit"
            ],
            "runtimeArgs": [
                "--nolazy"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [ "${workspaceFolder}/lib/**/*.js" ],
            "smartStep": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Express",
            "preLaunchTask": "build",
            "program": "${workspaceRoot}/lib/app.js"
        }
    ]
}